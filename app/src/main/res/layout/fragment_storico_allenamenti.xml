<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.StoricoAllenamentiFragment">


    <CalendarView
        android:id="@+id/calendarioAllenamenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/allenamentipergiorno"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <ListView
        android:id="@+id/allenamentipergiorno"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tw_allenamentieffettuati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/allenamentipergiorno"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="Allenamenti effettuati: "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
</RelativeLayout>
